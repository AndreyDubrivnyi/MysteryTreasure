<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgount_horizontal"
    tools:context=".Game">

    <TextView
        android:id="@+id/beginPl"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textik_bacground"
        android:fontFamily="@font/yatra_one"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="9"
        android:text="@string/beginplay"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_stavb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/pluse"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginEnd="-20dp"
        android:background="@drawable/textik_bacground"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="9"
        android:text="@string/plus"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_stavb"
        app:layout_constraintEnd_toStartOf="@+id/edit_stavb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_stavb" />




    <EditText
        android:id="@+id/edit_stavb"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@drawable/textik_bacground"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="4"
        android:minHeight="48dp"
        android:text="200"
        android:textColor="@color/colorText_game"
        android:textAlignment="center"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="9"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/pointer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pointer"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/textik_bacground"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="9"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:src="@drawable/general_hero"
        app:layout_constraintBottom_toTopOf="@+id/slot2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/minusus"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-20dp"
        android:background="@drawable/textik_bacground"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="9"
        android:text="@string/minus"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_stavb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_stavb"
        app:layout_constraintTop_toTopOf="@+id/edit_stavb" />

    <ImageView
        android:id="@+id/slot1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/slotik1"
        app:layout_constraintBottom_toBottomOf="@+id/slot2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/slot2" />

    <ImageView
        android:id="@+id/slot2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/slotik1"
        app:layout_constraintBottom_toTopOf="@+id/slot5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/slot3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/slotik1"
        app:layout_constraintBottom_toBottomOf="@+id/slot2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/slot2" />

    <ImageView
        android:id="@+id/slot4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/slotik1"
        app:layout_constraintBottom_toBottomOf="@+id/slot5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/slot5" />

    <ImageView
        android:id="@+id/slot5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/slotik1"
        android:layout_marginTop="140dp"
        app:layout_constraintBottom_toTopOf="@+id/beginPl"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/slot6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/slotik1"
        app:layout_constraintBottom_toBottomOf="@+id/slot5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/slot5" />

    <ImageView
        android:id="@+id/slot7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/slotik1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/slot5"
        app:layout_constraintTop_toBottomOf="@+id/slot4" />

    <ImageView
        android:id="@+id/slot8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/slotik1"
        app:layout_constraintBottom_toBottomOf="@+id/slot7"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/slot5" />

    <ImageView
        android:id="@+id/slot9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/slotik1"
        app:layout_constraintBottom_toBottomOf="@+id/slot8"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/slot8" />

</androidx.constraintlayout.widget.ConstraintLayout>